                "/dev/shm": "/dev/shm",
            },
        },
        "tticslurm": {
            "mode": "slurm-sing",
            "mount": [],
            "mount_from_host": {
                "/share/data/ripl-takuma/projects/diffusion-shared-autonomy": "/data",
            },
            "singularity": {
                "sif_file": "/share/data/ripl-takuma/singularity-workspace/diffuser/diffuser.sif",
